{
  "name": "codecollab",
  "version": "1.0.0",
  "description": "Collaborative code editor with multi-language support",
  "main": "main.js",
  "scripts": {
    "postinstall": "node scripts/setup.js",
    "start": "node scripts/start.js",
    "start:server": "node server/server.js",
    "start:electron": "electron .",
    "dev": "node server/server.js",
    "electron": "electron ."
  },
  "build": {
    "appId": "com.codecollab.app",
    "productName": "CodeCollab",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "public/**/*",
      "server/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Development"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "code editor",
    "collaborative",
    "real-time",
    "electron"
  ],
  "author": "CodeCollab",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
